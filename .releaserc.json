{
  "branches": [
    { "name": "+([0-9])?(.{+([0-9]),x}).x" },
    { "name": "main" },
    { "name": "next" },
    { "name": "next-major" },
    { "name": "beta", "prerelease": true },
    { "name": "alpha", "prerelease": true }
  ],
  "preset": "conventionalcommits",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/exec",
      {
        "verifyConditionsCmd": "ci/release/verify.sh",
        "prepareCmd": "ci/release/prepare.sh ${nextRelease.version}",
        "publishCmd": "ci/release/publish.sh"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "Release Notes\n---",
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "isthmus/build/graal/isthmus-macOS-latest",
            "name": "isthmus-macOS-${nextRelease.version}",
            "label": "nativeMacOS"
          },
          {
            "path": "isthmus/build/graal/isthmus-ubuntu-latest",
            "name": "isthmus-ubuntu-${nextRelease.version}",
            "label": "nativeUbuntu"
          },
          {
            "path": "isthmus/build/graal/isthmus-macOS-latest.bin",
            "name": "isthmus-macOS-${nextRelease.version}",
            "label": "bcknativeMacOS"
          },
          {
            "path": "isthmus/build/graal/isthmus-ubuntu-latest.bin",
            "name": "isthmus-ubuntu-${nextRelease.version}",
            "label": "bcknativeUbuntu"
          },
          {
            "path": "**/isthmus/build/graal/isthmus-macOS-latest.bin",
            "name": "isthmus-macOS-${nextRelease.version}",
            "label": "bcknativeMacOS"
          },
          {
            "path": "**/isthmus/build/graal/isthmus-ubuntu-latest.bin",
            "name": "isthmus-ubuntu-${nextRelease.version}",
            "label": "bcknativeUbuntu"
          },
          {
            "path": "**/isthmus/build/graal/isthmus-macOS-latest.bin",
            "name": "isthmus-macOS-001-1",
            "label": "bcknativeMacOS"
          },
          {
            "path": "**/isthmus/build/graal/isthmus-ubuntu-latest.bin",
            "name": "isthmus-ubuntu-001-2",
            "label": "bcknativeUbuntu"
          }
        ],
        "successComment": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "gradle.properties",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version}"
      }
    ]
  ]
}
